[include]
    path = ~/.gitconfig.local
[credential]
    helper = cache
[core]
    autocrlf = false
    filemode = false
[merge]
    tool = vimdiff
[alias]
    ad  = add
    br  = branch
    co  = commit -v
    ch  = checkout
    di  = diff
    fe  = fetch
    la  = log -1 HEAD
    lag = log --all --graph --oneline --decorate
    lg  = log --graph --oneline --decorate
    mg  = merge --no-ff
    pa  = !git remote | xargs -L1 git push --all
    pl  = pull --rebase
    ps  = push
    rb  = rebase
    sh  = stash
    st  = status
    su  = submodule update --recursive --remote
[push]
    default = current
[http]
    sslverify = true
[commit]
    gpgsign = true
