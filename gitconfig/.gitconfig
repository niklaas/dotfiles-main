[user]
    name = Niklaas Baudet von Gersdorff
    email = me@niklaas.eu
[credential]
    helper = cache
[core]
    editor = vim
    autocrlf = false
    filemode = false
[merge]
    tool = vimdiff
[alias]
    ad = add
    br = branch
    ci = commit
    co = checkout
    di = diff
    fe = fetch
    la = log -1 HEAD
    mg = merge
    pa = !git remote | xargs -L1 git push --all
    pl = pull
    ps = push
    st = status
    su = submodule update --recursive --remote
[push]
    default = current
[http]
    sslverify = true
