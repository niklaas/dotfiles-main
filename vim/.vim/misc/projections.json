{
  "config/prod.exs": {
    "lib/*_controller.ex": {
      "type": "controller",
      "alternate": "test/{}_test.exs"
    }
  },
  "angular.json|.angular-cli.json": {
    "src/app/*.component.ts": {
      "type": "component",
      "alternate": "src/app/{}.component.spec.ts"
    },
    "src/app/*.model.ts": {
      "type": "model",
      "alternate": "src/app/{}.model.spec.ts"
    },
    "src/app/*.service.ts": {
      "type": "service",
      "alternate": "src/app/{}.service.spec.ts"
    },
    "src/app/*.scss": {
      "type": "style",
      "alternate": "src/app/{}.component.html"
    },
    "src/app/*.component.html": {
      "type": "template",
      "alternate": "src/app/{}.component.scss"
    },
    "src/app/*.spec.ts": {
      "type": "test",
      "alternate": "src/app/{}.ts"
    },
    "src/app/*.ts": {
      "make": "ng test %",
      "alternate": "src/app/{}.spec.ts"
    }
  },
  "*.tex": {
    "*.tex": {
      "make": "latexmk -pdf %"
    }
  },
  "Cargo.toml": {
    "src/*.rs": {
      "type": "source",
      "alternate": "tests/{}.rs"
    },
    "tests/*.rs": {
      "type": "test",
      "alternate": "src/{}.rs"
    },
    "*.rs": {
      "make": "cargo build",
      "dispatch": "cargo test"
    }
  }
}
